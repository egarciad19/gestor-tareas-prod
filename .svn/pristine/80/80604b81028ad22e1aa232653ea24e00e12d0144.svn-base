<body style="background: linear-gradient( to bottom, #336699, black); ">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fas fa-user"></span>
                        </div>
                        <div style="text-align:center; align-self: center;">
                            <h2 style="text-align:center;">Organizador de Tareas</h2>
                            <h3>Modo Invitado</h3>
                            <mat-form-field appearance="standard" style="width: 85%;">
                                <mat-label>Confirma tu correo electr√≥nico</mat-label>
                                <input matInput [formControl]="email" required>
                                <mat-error *ngIf="email.invalid">{{getErrorMessage()}}</mat-error>
                            </mat-form-field>
                            <br> <br>
                            <div class="example-button-row">
                                <button style="float: left; text-align:center; margin-left: 10%;" mat-raised-button class="btn btn-secondary rounded" (click)="registrarse();">Registrarse</button>
                                <button style="float: right; text-align:center; margin-right: 10%;" mat-raised-button class="btn btn-primary rounded" (click)="iniciar();">Ingresar</button>
                            </div>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>