body {
    margin: 0;
  }
  
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 15%;
    background-image: linear-gradient( #336699, black);
    position: fixed;
    height: 100%;
    overflow: auto;
  }
  
  li a {
    font-family: Arial, Helvetica, sans-serif;
    display: block;
    color: white;
    padding: 8px 16px;
    text-decoration: none;
  }
  
  li a.active {
    background-color: white;
    color: black;
  }
  
  li a:hover:not(.active) {
    background-color: gray;
    color: white;
  }
  